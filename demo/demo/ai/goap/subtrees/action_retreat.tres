[sub_resource type="BTWait" id="BTWait_1"]
duration = 0.5

[sub_resource type="BTSetVar" id="BTSetVar_1"]
variable = "in_cover"
value = true

[sub_resource type="BTSetVar" id="BTSetVar_2"]
variable = "near_cover"
value = true

[sub_resource type="BTSetVar" id="BTSetVar_3"]
variable = "target_in_range"
value = false

[sub_resource type="BTSequence" id="BTSequence_1"]
custom_name = "Retreat"
